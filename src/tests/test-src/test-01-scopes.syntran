
{

	// This is the first example on the wikipedia page for variable
	// shadowing

	let expect_2a = 0;
	let expect_4a = 0;
	let expect_2b = 0;
	let expect_1a = 0;

	let v = 1;

	{
		let v = v + 1;
		expect_2a = v;

		{
			let v = v * 2;
			expect_4a = v;
		}

		expect_2b = v;
	}

	expect_1a = v;

	expect_2a == 2 and
	expect_4a == 4 and
	expect_2b == 2 and
	expect_1a == 1;
	// true
}

