
fn get_pi(): f32
{
	println("get_pi()");
	let pi = 0.0f;
	for k in [0: 10]
	{
		pi += (1 / 16.0f ** k) *
		(
			4.0f / (8 * k + 1) -
			2.0f / (8 * k + 4) -
			1.0f / (8 * k + 5) -
			1.0f / (8 * k + 6)
		);
	}
	return pi;
}

